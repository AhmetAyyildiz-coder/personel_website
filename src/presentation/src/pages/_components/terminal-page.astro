---
import { TranslationKeys } from "~/domain/data/Translations";
import { useI18nStatic } from "~/presentation/src/shared/utils/i18nTranslate";
import DesktopLayout from "~/presentation/src/shared/layouts/DesktopLayout.astro";
import SeoConstants from "~/presentation/src/shared/constants/SeoConstants";
import TerminalPageOGImage from "~/presentation/src/pages/_assets/images/terminal-page-og-image.webp";

const translate = useI18nStatic(Astro.url);

const title = `${translate(TranslationKeys.apps_terminal)} | ${SeoConstants.DEFAULT_TITLE}`;
const description = translate(TranslationKeys.apps_terminal_page_desc);
const ogImageAlt = translate(TranslationKeys.apps_terminal);
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  name: title,
  description: description,
  url: Astro.url.href,
  image: TerminalPageOGImage.src,
  applicationCategory: "Development Tool",
  operatingSystem: "Web Browser",
};
---

<DesktopLayout
  metadata={{
    title,
    description,
    ogImage: {
      image: TerminalPageOGImage,
      alt: ogImageAlt,
    },
    structuredData,
  }}
/>
