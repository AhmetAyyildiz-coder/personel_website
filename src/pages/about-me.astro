---
import DesktopLayout from '~/pages/_layouts/DesktopLayout.astro';

const metadata = {
  title: 'Ahmet Ã‡etinkaya',
  ignoreTitleTemplate: true,
};
---

<DesktopLayout metadata={metadata} />

<script>
  import { Apps } from '~/domain/models/App';
  import { openApp } from './_scripts/app';

  await onAstroInit();
  document.addEventListener('astro:after-swap', onAstroAfterSwap);

  async function onAstroInit() {
    await openApp(Apps.AboutMe);
  }

  async function onAstroAfterSwap() {
    if (!document.location.pathname.endsWith('/about-me')) return;
    await openApp(Apps.AboutMe);
  }
</script>
