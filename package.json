{
  "name": "ahmetcetinkaya.me",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "format": "(prettier --write . \"!src/presentation/**/*\") && (cd src/presentation && bun format)",
    "install-all": "bun install && find . -name 'package.json' ! -path '*/node_modules/*' -execdir bun install \\;",
    "lint": "eslint .",
    "start": "cd src/presentation && bun start"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bun": "^1.1.15",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "prettier": "3.4.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "typescript-eslint": "^8.19.1"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  }
}
